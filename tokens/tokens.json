{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "DLS-Lead design tokens — 4-layer DTCG-compliant system. Primitives → System Semantics → State Abstraction → Component Tokens.",

  "color": {
    "neutral": {
      "$description": "Primitive neutral scale for surfaces, text, borders. Do not use directly in components.",
      "0": { "$value": "#FFFFFF", "$type": "color" },
      "50": { "$value": "#FAFAFA", "$type": "color" },
      "100": { "$value": "#F5F5F5", "$type": "color" },
      "200": { "$value": "#E9EAEB", "$type": "color" },
      "300": { "$value": "#D5D7DA", "$type": "color" },
      "400": { "$value": "#A4A7AE", "$type": "color" },
      "500": { "$value": "#717680", "$type": "color" },
      "600": { "$value": "#535862", "$type": "color" },
      "700": { "$value": "#414651", "$type": "color" },
      "800": { "$value": "#252B37", "$type": "color" },
      "900": { "$value": "#181D27", "$type": "color" },
      "950": { "$value": "#0A0D12", "$type": "color" }
    },
    "primary": {
      "$description": "Primitive primary (brand) scale. Do not use directly in components.",
      "50": { "$value": "#F9F5FF", "$type": "color" },
      "100": { "$value": "#F4EBFF", "$type": "color" },
      "200": { "$value": "#E9D7FE", "$type": "color" },
      "300": { "$value": "#D6BBFB", "$type": "color" },
      "400": { "$value": "#B692F6", "$type": "color" },
      "500": { "$value": "#9E77ED", "$type": "color" },
      "600": { "$value": "#7F56D9", "$type": "color" },
      "700": { "$value": "#6941C6", "$type": "color" },
      "800": { "$value": "#53389E", "$type": "color" },
      "900": { "$value": "#42307D", "$type": "color" },
      "950": { "$value": "#2C1C5F", "$type": "color" }
    },
    "info": {
      "$description": "Primitive info scale. Do not use directly in components.",
      "50": { "$value": "#EFF8FF", "$type": "color" },
      "100": { "$value": "#D1E9FF", "$type": "color" },
      "200": { "$value": "#B2DDFF", "$type": "color" },
      "300": { "$value": "#84CAFF", "$type": "color" },
      "400": { "$value": "#53B1FD", "$type": "color" },
      "500": { "$value": "#2E90FA", "$type": "color" },
      "600": { "$value": "#1570EF", "$type": "color" },
      "700": { "$value": "#175CD3", "$type": "color" },
      "800": { "$value": "#1849A9", "$type": "color" },
      "900": { "$value": "#194185", "$type": "color" },
      "950": { "$value": "#102A56", "$type": "color" }
    },
    "success": {
      "$description": "Primitive success scale. Do not use directly in components.",
      "50": { "$value": "#ECFDF3", "$type": "color" },
      "100": { "$value": "#D1FADF", "$type": "color" },
      "200": { "$value": "#A6F4C5", "$type": "color" },
      "300": { "$value": "#6CE9A6", "$type": "color" },
      "400": { "$value": "#32D583", "$type": "color" },
      "500": { "$value": "#12B76A", "$type": "color" },
      "600": { "$value": "#039855", "$type": "color" },
      "700": { "$value": "#027A48", "$type": "color" },
      "800": { "$value": "#05603A", "$type": "color" },
      "900": { "$value": "#054F31", "$type": "color" },
      "950": { "$value": "#053321", "$type": "color" }
    },
    "warning": {
      "$description": "Primitive warning scale. Do not use directly in components.",
      "50": { "$value": "#FFFAEB", "$type": "color" },
      "100": { "$value": "#FEF0C7", "$type": "color" },
      "200": { "$value": "#FEDF89", "$type": "color" },
      "300": { "$value": "#FEC84B", "$type": "color" },
      "400": { "$value": "#FDB022", "$type": "color" },
      "500": { "$value": "#F79009", "$type": "color" },
      "600": { "$value": "#DC6803", "$type": "color" },
      "700": { "$value": "#B54708", "$type": "color" },
      "800": { "$value": "#93370D", "$type": "color" },
      "900": { "$value": "#7A2E0E", "$type": "color" },
      "950": { "$value": "#4E1D09", "$type": "color" }
    },
    "danger": {
      "$description": "Primitive danger scale. Do not use directly in components.",
      "50": { "$value": "#FEF3F2", "$type": "color" },
      "100": { "$value": "#FEE4E2", "$type": "color" },
      "200": { "$value": "#FECDCA", "$type": "color" },
      "300": { "$value": "#FDA29B", "$type": "color" },
      "400": { "$value": "#F97066", "$type": "color" },
      "500": { "$value": "#F04438", "$type": "color" },
      "600": { "$value": "#D92D20", "$type": "color" },
      "700": { "$value": "#B42318", "$type": "color" },
      "800": { "$value": "#912018", "$type": "color" },
      "900": { "$value": "#7A271A", "$type": "color" },
      "950": { "$value": "#55160C", "$type": "color" }
    },
    "additional": {
      "$description": "Additional primitive palettes for extended use cases.",
      "purple": { "100": { "$value": "#F8CFFC", "$type": "color" }, "300": { "$value": "#EF9CF9", "$type": "color" }, "500": { "$value": "#E244F3", "$type": "color" }, "700": { "$value": "#B20DC5", "$type": "color" } },
      "violet": { "100": { "$value": "#E3CBFB", "$type": "color" }, "300": { "$value": "#BA7EF5", "$type": "color" }, "500": { "$value": "#9439EF", "$type": "color" }, "700": { "$value": "#620FB3", "$type": "color" } },
      "pink": { "100": { "$value": "#FFE0F3", "$type": "color" }, "300": { "$value": "#FFB2E1", "$type": "color" }, "500": { "$value": "#FF4ABA", "$type": "color" }, "700": { "$value": "#D60084", "$type": "color" } },
      "blue": { "100": { "$value": "#E6E9FF", "$type": "color" }, "300": { "$value": "#C0C7FF", "$type": "color" }, "500": { "$value": "#475DFF", "$type": "color" }, "700": { "$value": "#0019D6", "$type": "color" } },
      "teal": { "100": { "$value": "#C8F8FE", "$type": "color" }, "300": { "$value": "#76EDFD", "$type": "color" }, "500": { "$value": "#03CCE7", "$type": "color" }, "700": { "$value": "#03A6BB", "$type": "color" } },
      "yellow": { "100": { "$value": "#FFF1C5", "$type": "color" }, "300": { "$value": "#FFDB6E", "$type": "color" }, "500": { "$value": "#FFC71F", "$type": "color" }, "700": { "$value": "#D6A100", "$type": "color" } },
      "green": { "100": { "$value": "#C8FDC7", "$type": "color" }, "300": { "$value": "#76F974", "$type": "color" }, "500": { "$value": "#0CC308", "$type": "color" }, "700": { "$value": "#099B06", "$type": "color" } },
      "gold": { "100": { "$value": "#F4EECF", "$type": "color" }, "300": { "$value": "#E4D486", "$type": "color" }, "500": { "$value": "#DAC65D", "$type": "color" }, "700": { "$value": "#9A8623", "$type": "color" } },
      "cinnamon": { "100": { "$value": "#F6E9E4", "$type": "color" }, "300": { "$value": "#E6C1B2", "$type": "color" }, "500": { "$value": "#CD866A", "$type": "color" }, "700": { "$value": "#995033", "$type": "color" } },
      "orange": { "100": { "$value": "#FFEAD7", "$type": "color" }, "300": { "$value": "#FECA9A", "$type": "color" }, "500": { "$value": "#FD9535", "$type": "color" }, "700": { "$value": "#CA6202", "$type": "color" } }
    },
    "opacity": {
      "$description": "Primitive opacity overlays (light/dark) and numeric scale for state abstraction.",
      "light": { "20": { "$value": "rgba(255, 255, 255, 0.2)", "$type": "color" }, "40": { "$value": "rgba(255, 255, 255, 0.4)", "$type": "color" }, "60": { "$value": "rgba(255, 255, 255, 0.6)", "$type": "color" }, "80": { "$value": "rgba(255, 255, 255, 0.8)", "$type": "color" } },
      "dark": { "20": { "$value": "rgba(0, 0, 0, 0.2)", "$type": "color" }, "40": { "$value": "rgba(0, 0, 0, 0.4)", "$type": "color" }, "60": { "$value": "rgba(0, 0, 0, 0.6)", "$type": "color" }, "80": { "$value": "rgba(0, 0, 0, 0.8)", "$type": "color" } },
      "0": { "$value": 0, "$type": "number", "$description": "Fully transparent." },
      "10": { "$value": 0.1, "$type": "number" },
      "20": { "$value": 0.2, "$type": "number" },
      "30": { "$value": 0.3, "$type": "number" },
      "40": { "$value": 0.4, "$type": "number" },
      "50": { "$value": 0.5, "$type": "number" },
      "60": { "$value": 0.6, "$type": "number" },
      "70": { "$value": 0.7, "$type": "number" },
      "80": { "$value": 0.8, "$type": "number" },
      "90": { "$value": 0.9, "$type": "number" },
      "100": { "$value": 1, "$type": "number", "$description": "Fully opaque." }
    },

    "surface": {
      "$description": "Layer 2 — System semantics for surface/background roles. Components use these or component tokens only.",
      "base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Primary app surface; highest emphasis background." },
      "subtle": { "$value": "{color.neutral.50}", "$type": "color", "$description": "Secondary surface; low emphasis." },
      "muted": { "$value": "{color.neutral.100}", "$type": "color", "$description": "Tertiary surface; medium-low emphasis." },
      "strong": { "$value": "{color.neutral.300}", "$type": "color", "$description": "Strong surface for hover/pressed on light contexts." },
      "inverse": { "$value": "{color.neutral.900}", "$type": "color", "$description": "Inverted surface (e.g. header, footer)." },
      "disabled": { "$value": "{color.neutral.50}", "$type": "color", "$description": "Surface for disabled components." }
    },
    "text": {
      "$description": "Layer 2 — System semantics for text/icon color. No interaction state; use component tokens for states.",
      "primary": { "$value": "{color.neutral.900}", "$type": "color", "$description": "Primary text and icons on surfaces." },
      "secondary": { "$value": "{color.neutral.700}", "$type": "color", "$description": "Secondary text and icons." },
      "inverse": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Text and icons on inverse (dark) surfaces." },
      "disabled": { "$value": "{color.neutral.500}", "$type": "color", "$description": "Text and icons in disabled state." },
      "placeholder": { "$value": "{color.neutral.600}", "$type": "color", "$description": "Placeholder text in inputs." }
    },
    "border": {
      "$description": "Layer 2 — System semantics for border color. Use component tokens for bordered components.",
      "base": { "$value": "{color.neutral.300}", "$type": "color", "$description": "Base border; inputs, cards." },
      "subtle": { "$value": "{color.neutral.200}", "$type": "color", "$description": "Subtle divider or border." },
      "strong": { "$value": "{color.neutral.500}", "$type": "color", "$description": "Strong border for emphasis." },
      "focus": { "$value": "{color.neutral.700}", "$type": "color", "$description": "Border when focused (keyboard)." },
      "disabled": { "$value": "{color.neutral.200}", "$type": "color", "$description": "Border for disabled controls." },
      "inverse": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Border on inverse/dark surfaces (white in light mode, near-black in dark)." }
    },
    "intent": {
      "$description": "Layer 2 — System semantics for intent/status. Meaning only; no hover/pressed — use state + component tokens.",
      "primary": {
        "base": { "$value": "{color.primary.700}", "$type": "color", "$description": "Primary intent filled background." },
        "on-base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Foreground on primary base (e.g. filled button text). ~6.6:1 contrast." },
        "subtle": { "$value": "{color.primary.50}", "$type": "color", "$description": "Primary intent subtle background." },
        "strong": { "$value": "{color.primary.800}", "$type": "color", "$description": "Primary intent strong (e.g. hover)." },
        "text": { "$value": "{color.primary.900}", "$type": "color", "$description": "Primary intent text/icon." },
        "border": { "$value": "{color.primary.200}", "$type": "color", "$description": "Primary intent border." }
      },
      "success": {
        "base": { "$value": "{color.success.700}", "$type": "color" },
        "on-base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Foreground on success base. ~5.4:1 contrast." },
        "subtle": { "$value": "{color.success.50}", "$type": "color" },
        "strong": { "$value": "{color.success.800}", "$type": "color" },
        "text": { "$value": "{color.success.900}", "$type": "color" },
        "border": { "$value": "{color.success.200}", "$type": "color" }
      },
      "warning": {
        "base": { "$value": "{color.warning.700}", "$type": "color" },
        "on-base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Foreground on warning base. ~5.4:1 contrast." },
        "subtle": { "$value": "{color.warning.50}", "$type": "color" },
        "strong": { "$value": "{color.warning.800}", "$type": "color" },
        "text": { "$value": "{color.warning.900}", "$type": "color" },
        "border": { "$value": "{color.warning.200}", "$type": "color" }
      },
      "danger": {
        "base": { "$value": "{color.danger.600}", "$type": "color" },
        "on-base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Foreground on danger base. ~4.8:1 contrast." },
        "subtle": { "$value": "{color.danger.50}", "$type": "color" },
        "strong": { "$value": "{color.danger.700}", "$type": "color" },
        "text": { "$value": "{color.danger.900}", "$type": "color" },
        "border": { "$value": "{color.danger.200}", "$type": "color" }
      },
      "info": {
        "base": { "$value": "{color.info.700}", "$type": "color" },
        "on-base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Foreground on info base. ~6.1:1 contrast." },
        "subtle": { "$value": "{color.info.50}", "$type": "color" },
        "strong": { "$value": "{color.info.800}", "$type": "color" },
        "text": { "$value": "{color.info.900}", "$type": "color" },
        "border": { "$value": "{color.info.200}", "$type": "color" }
      },
      "neutral": {
        "base": { "$value": "{color.neutral.800}", "$type": "color" },
        "on-base": { "$value": "{color.neutral.0}", "$type": "color", "$description": "Foreground on neutral base. ~14.2:1 contrast." },
        "subtle": { "$value": "{color.neutral.50}", "$type": "color" },
        "strong": { "$value": "{color.neutral.900}", "$type": "color" },
        "text": { "$value": "{color.neutral.900}", "$type": "color" },
        "border": { "$value": "{color.neutral.200}", "$type": "color" }
      }
    },
    "overlay": {
      "$description": "Layer 2 — Overlay colors for modals, drawers, scrims. Use color.overlay.scrim or color.overlay.backdrop in components.",
      "scrim": { "$value": "rgba(0, 0, 0, 0.5)", "$type": "color", "$description": "Scrim behind modals and overlays." },
      "backdrop": { "$value": "rgba(0, 0, 0, 0.3)", "$type": "color", "$description": "Lighter backdrop for non-blocking overlays." }
    },

    "component": {
      "$description": "Layer 4 — Component-specific tokens. Override-safe; components must use only these or other component tokens.",
      "button": {
        "primary": {
          "bg": { "base": { "$value": "{color.intent.primary.base}", "$type": "color" }, "disabled": { "$value": "{color.surface.disabled}", "$type": "color" } },
          "fg": { "base": { "$value": "{color.intent.primary.on-base}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } },
          "border": { "base": { "$value": "{color.intent.primary.base}", "$type": "color" }, "disabled": { "$value": "{color.border.disabled}", "$type": "color" } }
        },
        "secondary": {
          "bg": { "base": { "$value": "{color.surface.subtle}", "$type": "color" }, "focus": { "$value": "{color.surface.base}", "$type": "color" }, "disabled": { "$value": "{color.surface.disabled}", "$type": "color" } },
          "fg": { "base": { "$value": "{color.text.primary}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } },
          "border": { "base": { "$value": "{color.border.base}", "$type": "color" }, "hover": { "$value": "{color.border.strong}", "$type": "color" }, "pressed": { "$value": "{color.border.strong}", "$type": "color" }, "disabled": { "$value": "{color.border.disabled}", "$type": "color" } }
        },
        "ghost": {
          "bg": { "base": { "$value": "transparent", "$type": "color" }, "focus": { "$value": "{color.surface.base}", "$type": "color", "$description": "Focus bg for non-filled variants; ensures visible contrast under the focus ring." }, "disabled": { "$value": "transparent", "$type": "color" } },
          "fg": { "base": { "$value": "{color.text.primary}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } }
        }
      },
      "badge": {
        "neutral": { "bg": { "$value": "{color.intent.neutral.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.neutral.text}", "$type": "color" }, "border": { "$value": "{color.intent.neutral.border}", "$type": "color" } },
        "primary": { "bg": { "$value": "{color.intent.primary.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.primary.text}", "$type": "color" }, "border": { "$value": "{color.intent.primary.border}", "$type": "color" } },
        "success": { "bg": { "$value": "{color.intent.success.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.success.text}", "$type": "color" }, "border": { "$value": "{color.intent.success.border}", "$type": "color" } },
        "warning": { "bg": { "$value": "{color.intent.warning.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.warning.text}", "$type": "color" }, "border": { "$value": "{color.intent.warning.border}", "$type": "color" } },
        "danger": { "bg": { "$value": "{color.intent.danger.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.danger.text}", "$type": "color" }, "border": { "$value": "{color.intent.danger.border}", "$type": "color" } },
        "info": { "bg": { "$value": "{color.intent.info.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.info.text}", "$type": "color" }, "border": { "$value": "{color.intent.info.border}", "$type": "color" } }
      },
      "chip": {
        "bg": { "base": { "$value": "{color.surface.muted}", "$type": "color" }, "disabled": { "$value": "{color.surface.disabled}", "$type": "color" } },
        "fg": { "base": { "$value": "{color.text.primary}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } },
        "border": { "base": { "$value": "{color.border.subtle}", "$type": "color" }, "disabled": { "$value": "{color.border.disabled}", "$type": "color" } }
      },
      "tab": {
        "fg": { "base": { "$value": "{color.text.secondary}", "$type": "color" }, "active": { "$value": "{color.text.primary}", "$type": "color" }, "hover": { "$value": "{color.text.primary}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } },
        "border": { "active": { "$value": "{color.intent.primary.base}", "$type": "color" } }
      },
      "input": {
        "bg": { "base": { "$value": "{color.surface.base}", "$type": "color" }, "disabled": { "$value": "{color.surface.disabled}", "$type": "color" } },
        "fg": { "base": { "$value": "{color.text.primary}", "$type": "color" }, "placeholder": { "$value": "{color.text.placeholder}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } },
        "border": { "base": { "$value": "{color.border.base}", "$type": "color" }, "hover": { "$value": "{color.border.strong}", "$type": "color" }, "focus": { "$value": "{color.border.focus}", "$type": "color" }, "disabled": { "$value": "{color.border.disabled}", "$type": "color" } }
      },
      "table": {
        "row": { "bg": { "base": { "$value": "transparent", "$type": "color" }, "selected": { "$value": "{color.intent.primary.subtle}", "$type": "color" } } },
        "header": { "bg": { "$value": "{color.surface.muted}", "$type": "color" }, "fg": { "$value": "{color.text.secondary}", "$type": "color" }, "border": { "$value": "{color.border.subtle}", "$type": "color" } }
      },
      "pagination": {
        "fg": { "base": { "$value": "{color.text.primary}", "$type": "color" }, "disabled": { "$value": "{color.text.disabled}", "$type": "color" } },
        "bg": { "base": { "$value": "transparent", "$type": "color" }, "active": { "$value": "{color.surface.muted}", "$type": "color" } }
      },
      "alert": {
        "neutral": { "bg": { "$value": "{color.surface.muted}", "$type": "color" }, "fg": { "$value": "{color.text.primary}", "$type": "color" }, "border": { "$value": "{color.border.base}", "$type": "color" } },
        "success": { "bg": { "$value": "{color.intent.success.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.success.text}", "$type": "color" }, "border": { "$value": "{color.intent.success.border}", "$type": "color" } },
        "warning": { "bg": { "$value": "{color.intent.warning.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.warning.text}", "$type": "color" }, "border": { "$value": "{color.intent.warning.border}", "$type": "color" } },
        "danger": { "bg": { "$value": "{color.intent.danger.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.danger.text}", "$type": "color" }, "border": { "$value": "{color.intent.danger.border}", "$type": "color" } },
        "info": { "bg": { "$value": "{color.intent.info.subtle}", "$type": "color" }, "fg": { "$value": "{color.intent.info.text}", "$type": "color" }, "border": { "$value": "{color.intent.info.border}", "$type": "color" } }
      },
      "dialog": {
        "overlay": { "$value": "{color.overlay.scrim}", "$type": "color" },
        "bg": { "$value": "{color.surface.base}", "$type": "color" },
        "border": { "$value": "{color.border.subtle}", "$type": "color" }
      },
      "dropdown": {
        "bg": { "$value": "{color.surface.base}", "$type": "color" },
        "border": { "$value": "{color.border.base}", "$type": "color" },
        "item": { "bg": { "base": { "$value": "transparent", "$type": "color" } }, "fg": { "$value": "{color.text.primary}", "$type": "color" } }
      },
      "sidebar": {
        "bg": { "$value": "{color.surface.subtle}", "$type": "color" },
        "border": { "$value": "{color.border.subtle}", "$type": "color" },
        "item": { "fg": { "base": { "$value": "{color.text.secondary}", "$type": "color" }, "active": { "$value": "{color.text.primary}", "$type": "color" } }, "bg": { "active": { "$value": "{color.surface.muted}", "$type": "color" } } }
      }
    }
  },

  "shadow": {
    "$description": "Shadow tokens. Raw primitives for composition; semantic shadows for components. Components use only shadow.surface, shadow.overlay, shadow.focus.ring.",
    "raw": {
      "sm": { "$value": "0 1px 2px rgba(0, 0, 0, 0.05)", "$type": "shadow", "$description": "Smallest elevation." },
      "md": { "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)", "$type": "shadow", "$description": "Medium elevation." },
      "lg": { "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)", "$type": "shadow", "$description": "Large elevation." }
    },
    "surface": {
      "sm": { "$value": "{shadow.raw.sm}", "$type": "shadow", "$description": "Semantic shadow for cards and surfaces; small elevation." },
      "md": { "$value": "{shadow.raw.md}", "$type": "shadow", "$description": "Semantic shadow for elevated surfaces; medium elevation." },
      "lg": { "$value": "{shadow.raw.lg}", "$type": "shadow", "$description": "Semantic shadow for modals and panels; large elevation." }
    },
    "overlay": { "$value": "0 25px 50px -12px rgba(0, 0, 0, 0.25)", "$type": "shadow", "$description": "Shadow for dropdowns and popovers; do not reference primitives in components." },
    "focus": { "ring": { "$value": "0 0 0 2px {state.focus.ring.color}", "$type": "shadow", "$description": "Focus ring shadow; semantic — no primitive reference." } }
  },

  "state": {
    "$description": "Layer 3 — State abstraction. Behavioral only; no brand colors. Code uses OKLCH L-shift; Figma uses opacity overlays.",
    "lDelta": {
      "hover":   { "$value": -0.05, "$type": "number", "$description": "OKLCH lightness shift for hover. Usage: oklch(from <base> calc(l + {state.lDelta.hover}) c h)" },
      "pressed": { "$value": -0.10, "$type": "number", "$description": "OKLCH lightness shift for pressed." }
    },
    "overlay": {
      "$description": "Figma-compatible opacity overlays approximating OKLCH L-shift. Apply as second fill layer in Figma. Dark mode uses light overlays.",
      "hover": {
        "light": { "$value": "rgba(0, 0, 0, 0.05)",   "$type": "color", "$description": "Hover overlay for light mode — approximates L - 0.05." },
        "dark":  { "$value": "rgba(255, 255, 255, 0.08)", "$type": "color", "$description": "Hover overlay for dark mode." }
      },
      "pressed": {
        "light": { "$value": "rgba(0, 0, 0, 0.10)",   "$type": "color", "$description": "Pressed overlay for light mode — approximates L - 0.10." },
        "dark":  { "$value": "rgba(255, 255, 255, 0.15)", "$type": "color", "$description": "Pressed overlay for dark mode." }
      }
    },
    "disabled": { "opacity": { "$value": 0.38, "$type": "number", "$description": "Opacity for disabled UI elements." } },
    "focus": { "ring": { "color": { "$value": "{color.info.300}", "$type": "color", "$description": "Focus ring color for keyboard focus." } } }
  },

  "font": {
    "$description": "Primitive font settings.",
    "family": { "$value": "Inter", "$type": "fontFamily" },
    "weight": { "normal": { "$value": 400, "$type": "fontWeight" }, "medium": { "$value": 500, "$type": "fontWeight" }, "semibold": { "$value": 600, "$type": "fontWeight" }, "bold": { "$value": 800, "$type": "fontWeight" }, "black": { "$value": 900, "$type": "fontWeight" } }
  },

  "text": {
    "$description": "Primitive size scale and semantic typography. Components use semantic text tokens.",
    "xs": { "fontSize": { "$value": "10px", "$type": "dimension" }, "lineHeight": { "$value": "14px", "$type": "dimension" } },
    "s": { "fontSize": { "$value": "12px", "$type": "dimension" }, "lineHeight": { "$value": "16px", "$type": "dimension" } },
    "m": { "fontSize": { "$value": "14px", "$type": "dimension" }, "lineHeight": { "$value": "20px", "$type": "dimension" } },
    "l": { "fontSize": { "$value": "16px", "$type": "dimension" }, "lineHeight": { "$value": "24px", "$type": "dimension" } },
    "xl": { "fontSize": { "$value": "18px", "$type": "dimension" }, "lineHeight": { "$value": "26px", "$type": "dimension" } },
    "2xl": { "fontSize": { "$value": "24px", "$type": "dimension" }, "lineHeight": { "$value": "32px", "$type": "dimension" } },
    "3xl": { "fontSize": { "$value": "32px", "$type": "dimension" }, "lineHeight": { "$value": "40px", "$type": "dimension" } },
    "hero": { "fontSize": { "$value": "36px", "$type": "dimension" }, "lineHeight": { "$value": "46px", "$type": "dimension" } },
    "heading": {
      "xl": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.2xl.fontSize}", "lineHeight": "{text.2xl.lineHeight}", "fontWeight": "{font.weight.semibold}" }, "$description": "Page or section title." },
      "l": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.xl.fontSize}", "lineHeight": "{text.xl.lineHeight}", "fontWeight": "{font.weight.semibold}" }, "$description": "Subsection title." },
      "m": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.l.fontSize}", "lineHeight": "{text.l.lineHeight}", "fontWeight": "{font.weight.medium}" }, "$description": "Card or block title." }
    },
    "body": {
      "l": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.l.fontSize}", "lineHeight": "{text.l.lineHeight}", "fontWeight": "{font.weight.normal}" }, "$description": "Large body text." },
      "m": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.m.fontSize}", "lineHeight": "{text.m.lineHeight}", "fontWeight": "{font.weight.normal}" }, "$description": "Medium body text." },
      "s": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.s.fontSize}", "lineHeight": "{text.s.lineHeight}", "fontWeight": "{font.weight.normal}" }, "$description": "Small body text." }
    },
    "label": {
      "m": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.m.fontSize}", "lineHeight": "{text.m.lineHeight}", "fontWeight": "{font.weight.medium}" }, "$description": "Medium label." },
      "s": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.s.fontSize}", "lineHeight": "{text.s.lineHeight}", "fontWeight": "{font.weight.medium}" }, "$description": "Small label." }
    },
    "caption": { "$type": "typography", "$value": { "fontFamily": "{font.family}", "fontSize": "{text.xs.fontSize}", "lineHeight": "{text.xs.lineHeight}", "fontWeight": "{font.weight.normal}" }, "$description": "Caption and helper text." }
  },

  "radius": {
    "$description": "Border radius tokens split into two categories: primitives (raw scale) and component (semantic).",
    "0": { "$value": "0px", "$type": "dimension" },
    "xs": { "$value": "2px", "$type": "dimension" },
    "s": { "$value": "4px", "$type": "dimension" },
    "m": { "$value": "6px", "$type": "dimension" },
    "l": { "$value": "8px", "$type": "dimension" },
    "xl": { "$value": "12px", "$type": "dimension" },
    "2xl": { "$value": "16px", "$type": "dimension" },
    "full": { "$value": "9999px", "$type": "dimension" },
    "component": {
      "$description": "Component-level border radius. Components reference these, not primitives directly.",
      "button":   { "$value": "{radius.m}",    "$type": "dimension", "$description": "Button border radius; maps to primitive radius.m (6px)." },
      "card":     { "$value": "{radius.l}",    "$type": "dimension", "$description": "Card border radius; maps to primitive radius.l." },
      "modal":    { "$value": "{radius.xl}",   "$type": "dimension", "$description": "Modal/dialog border radius; maps to primitive radius.xl." },
      "input":    { "$value": "{radius.s}",    "$type": "dimension", "$description": "Input border radius; maps to primitive radius.s." },
      "badge":    { "$value": "{radius.full}", "$type": "dimension", "$description": "Badge pill radius; maps to primitive radius.full." },
      "chip":     { "$value": "{radius.full}", "$type": "dimension", "$description": "Chip pill radius; same as badge." },
      "tooltip":  { "$value": "{radius.s}",    "$type": "dimension", "$description": "Tooltip corner radius." },
      "dropdown": { "$value": "{radius.m}",    "$type": "dimension", "$description": "Dropdown panel corner radius." },
      "alert":    { "$value": "{radius.m}",    "$type": "dimension", "$description": "Alert/banner corner radius." }
    }
  },

  "spacing": {
